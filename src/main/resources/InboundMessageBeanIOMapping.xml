<beanio xmlns="http://www.beanio.org/2012/03"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.beanio.org/2012/03 http://www.beanio.org/2012/03/mapping.xsd">

    <stream name="inputMessageStream" format="csv">
    <!-- record layout... -->
        <record name="inboundNameAddress" class="com.sg.camelmicroservicea.beans.NameAddress">
            <field name="name" minOccurs="1"/>
            <field name="houseNumber" minOccurs="1"/>
            <field name="city" minOccurs="1"/>
            <field name="province" minOccurs="1"/>
            <field name="postalCode" minOccurs="1"/>
        </record>
    </stream>
</beanio>